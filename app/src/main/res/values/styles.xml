<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Divider">
        <item name="android:layout_width">@dimen/space_x0</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/casper</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="AppTheme.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/black</item>
        <item name="android:indeterminate">true</item>
        <item name="android:layout_height">@dimen/space_x3</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/space_x7</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|start</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:paddingStart">@dimen/space_x2</item>
        <item name="android:paddingEnd">@dimen/space_x2</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:background">@drawable/et_border</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/midnight</item>
    </style>
</resources>